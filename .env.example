# Network Configuration Impact Analysis Platform - Environment Configuration Template
# Copy this file to .env and update the values as needed

# Neo4j Database Configuration
NEO4J_URI=bolt://localhost:7688
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=your_secure_password_here
NEO4J_DATABASE=neo4j

# Neo4j Web Interface (for development/debugging)
NEO4J_WEB_URI=http://localhost:7475

# Application Configuration
APP_NAME=netopo-analysis-platform
APP_VERSION=1.0.0
APP_ENV=development

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/netopo.log

# Data Paths (relative to project root)
DATA_CONFIGS_PATH=./data/configs
DATA_INVENTORY_PATH=./data/inventory/inventory.csv
DATA_TOPOLOGY_PATH=./data/topology
YANG_MODELS_PATH=./models/yang

# Performance Settings
MAX_CONCURRENT_LOADS=5
GRAPH_BATCH_SIZE=100
CACHE_TTL_SECONDS=3600

# Development Settings
DEBUG_MODE=true
ENABLE_QUERY_LOGGING=false