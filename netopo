#!/usr/bin/env python3
"""
Network Configuration Impact Analysis Platform entry point.
Convenience script to run the main CLI from project root.
"""

import subprocess
import sys
from pathlib import Path

# Get the project root directory
project_root = Path(__file__).parent

# Run the main CLI script
if __name__ == "__main__":
    cmd = ["uv", "run", "python", str(project_root / "src" / "cli" / "main.py")] + sys.argv[1:]
    subprocess.run(cmd)